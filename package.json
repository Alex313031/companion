{
  "name": "youtube-companion-plus",
  "version": "1.4.0",
  "description": "A client to watch youtube videos outside the browser and pin on top of everything.",
  "main": "public/main.min.js",
  "build": {
    "appId": "com.brunurd.youtube-companion",
    "productName": "Youtube Companion Plus",
    "files": "public/**/*",
    "mac": {
      "category": "public.app-category.entertainment",
      "target": "default",
      "icon": "public/images/favicon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/images/favicon.ico"
    },
    "nsis": {
      "artifactName": "${productName} ${version}.exe"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/brunurd/youtube-client.git"
  },
  "keywords": [
    "youtube",
    "companion",
    "client",
    "electron",
    "always on top",
    "browser"
  ],
  "author": "Bruno Araujo <bruno@lavaleakgames.com>",
  "license": "MIT",
  "homepage": "https://bitbucket.org/brunurd/youtube-client#readme",
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "concurrently \"rollup -cw\" \"sleep 5 && npm run debug\"",
    "build": "rollup -c",
    "electron": "electron .",
    "debug": "electron . debug",
    "icons": "png2icons ./public/images/yt_logo_rgb_light.png ./public/images/favicon -all -bc -i",
    "lint": "eslint *.js public/*.js",
    "lint-fix": "eslint *.js public/*.js --fix",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "electron-builder": "^22.7.0",
    "electron-reload": "^1.5.0",
    "eslint": "^7.2.0",
    "png2icons": "^2.0.1",
    "prettier": "2.0.5",
    "rollup": "^2.15.0",
    "rollup-plugin-terser": "^6.1.0"
  },
  "dependencies": {
    "electron": "^9.0.3"
  }
}
