{
  "name": "youtube-companion-plus",
  "version": "1.4.0",
  "description": "A client to watch youtube videos outside the browser and pin on top of everything.",
  "main": "public/main.min.js",
  "build": {
    "appId": "com.brunurd.youtube-companion",
    "productName": "Youtube Companion Plus",
    "files": "public/**/*",
    "mac": {
      "category": "public.app-category.entertainment",
      "target": "default",
      "icon": "public/images/favicon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/images/favicon.ico"
    },
    "nsis": {
      "artifactName": "${productName} ${version}.exe"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/brunurd/youtube-client.git"
  },
  "keywords": [
    "youtube",
    "companion",
    "client",
    "electron",
    "always on top",
    "browser"
  ],
  "author": "Bruno Araujo <bruno@lavaleakgames.com>",
  "license": "MIT",
  "homepage": "https://bitbucket.org/brunurd/youtube-client#readme",
  "scripts": {
    "start": "concurrently \"npm run css:watch\" \"rollup -cw\" \"sleep 3 && npm run debug\"",
    "build": "rollup -c",
    "electron": "electron .",
    "debug": "electron . debug",
    "test": "jest",
    "lint": "eslint src/*.js public/scripts.js",
    "lint:fix": "eslint src/*.js public/scripts.js --fix",
    "prettier": "prettier --write .",
    "css": "stylus style/main.styl --out public/style.min.css",
    "css:watch": "stylus style/main.styl --out public/style.min.css --watch",
    "icons": "png2icons ./public/images/yt_logo_rgb_light.png ./public/images/favicon -all -bc -i",
    "pack": "electron-builder",
    "pack:dir": "electron-builder --dir",
    "dist": "electron-builder --win --x64 && electron-builder --mac --x64 && electron-builder --linux --x64",
    "postinstall": "install-app-deps"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.9.0",
    "concurrently": "^5.2.0",
    "electron": "^9.0.3",
    "electron-builder": "^22.7.0",
    "electron-reload": "^1.5.0",
    "eslint": "^7.2.0",
    "jest": "^26.0.1",
    "png2icons": "^2.0.1",
    "prettier": "2.0.5",
    "rollup": "^2.15.0",
    "rollup-plugin-terser": "^6.1.0",
    "stylus": "^0.54.7"
  },
  "dependencies": {}
}
