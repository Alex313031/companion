{
  "name": "youtube-companion-plus",
  "version": "1.2.0",
  "description": "A client to watch youtube videos outside the browser and pin on top of everything.",
  "main": "index.js",
  "build": {
    "appId": "com.brunurd.youtube-companion",
    "productName": "Youtube Companion Plus",
    "mac": {
      "category": "public.app-category.entertainment",
      "target": "default",
      "icon": "app/images/favicon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "app/images/favicon.ico"
    },
    "nsis": {
      "artifactName": "${productName} ${version}.exe"
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "electron index",
    "debug": "electron index debug",
    "icons": "png2icons ./app/images/yt_logo_rgb_light.png ./app/images/favicon -all -bc -i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/brunurd/youtube-client.git"
  },
  "keywords": [
    "youtube",
    "companion",
    "client",
    "electron",
    "always on top",
    "browser"
  ],
  "author": "Bruno Araujo <bruno@lavaleakgames.com>",
  "license": "MIT",
  "homepage": "https://bitbucket.org/brunurd/youtube-client#readme",
  "devDependencies": {
    "asar": "^0.14.5",
    "electron": "^3.0.9",
    "electron-builder": "^20.34.0",
    "png2icons": "^0.9.1"
  },
  "dependencies": {}
}
